{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  },
  "pages": [
    {
      "path": "src/pages/home/index",
      "style": {
        "navigationBarTitleText": "首页",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "src/pages/orders/index",
      "style": {
        "navigationBarTitleText": "订单",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "src/pages/mine/index",
      "style": {
        "navigationBarTitleText": "我的"
      }
    },
    {
      "path": "src/pages/login/index",
      "style": {
        "navigationBarTitleText": "登录"
      }
    },
    {
      "path": "src/pages/register/index",
      "style": {
        "navigationBarTitleText": "注册"
      }
    },
    {
      "path": "src/pages/token-login/index",
      "style": {
        "navigationBarTitleText": "令牌登录"
      }
    }
  ],
  "tabBar": {
    "color": "#999999",
    "selectedColor": "#1E40AF",
    "backgroundColor": "#ffffff",
    "borderStyle": "black",
    "iconWidth": "24px",
    "list": [
      {
        "pagePath": "src/pages/home/index",
        "text": "首页",
        "iconPath": "src/static/tabbar/home.png",
        "selectedIconPath": "src/static/tabbar/home-active.png"
      },
      {
        "pagePath": "src/pages/orders/index",
        "text": "订单",
        "iconPath": "src/static/tabbar/orders.png",
        "selectedIconPath": "src/static/tabbar/orders-active.png"
      },
      {
        "pagePath": "src/pages/mine/index",
        "text": "我的",
        "iconPath": "src/static/tabbar/mine.png",
        "selectedIconPath": "src/static/tabbar/mine-active.png"
      }
    ]
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "OrderEase",
    "navigationBarBackgroundColor": "#ffffff",
    "backgroundColor": "#f5f5f5"
  }
}
